<div class="container-fluid">
  <%= render partial: 'modeldetails/sidebar' %>
  <main class="col-12 col-md-10 col-sm-12 p-0 container">
    <%= render partial: 'modeldetails/notice' %>
    <h2><p class="ml-5 mt-4 mb-4">Assigning roles</p></h2>
<div class="container">
<div class="row">
	<div class="col-2">
		
	</div>
	<div class="col-4">
	<%= form_for @adminrole, url:{action:"adminrolemanage_update"} do |f| %>
		<br>
		<%= @adminrole.email %><br>
		<%= f.select :role_id, Role.all.map  { |m1| [m1.name, m1.id]}, class: 'form-control status' %> <br>
		<%= f.submit "update", class: "btn btn-success mt-3" %>
	<% end %>
	</div>
	<div class="col-4">
		<div class="card bg-warning" style="width: 18rem;">
		  <div class="card-header">
		    <strong>Existed Roles with permissions</strong>
		  </div>
		  <ul class="list-group list-group-flush">
		  	<% Role.all.each do |role| %>
		    <li class="list-group-item"><%= role.name %> -> 
		    	<% role.permissions.each do |permission| %>
		    		<%= permission.name %>,
		    	<% end %>	
		    </li>
		    <% end %>
		  </ul>
		</div>
	</div>
	<div class="col-2">
		
	</div>
</div>
</div>
</div>
</main>