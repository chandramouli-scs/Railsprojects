<div class="container">
<h1 class="ml-5 mt-3">News Feed</h1>
	<center><%= link_to "+ Create News", new_newsfeed_path, class: "btn btn-warning" %></center><br>

<% @newsfeeds.each do |news| %>

	<div>

		<center>
		<h5>News - <%= news.post %><br>
		Posted by - <%= news.user.user_name %></h5>
		<%= link_to "Edit", edit_newsfeed_path(news) %> <%= link_to "Delete", newsfeed_path(news), method: :delete, data: { confirm: 'Are you sure to Delete?' }, class: "text-danger" %></center><br>

	</div>

<% end %>
</div>