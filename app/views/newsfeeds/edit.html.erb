<div class="container">
<h1 class="ml-5 mt-3">Edit News</h1>
<%= form_for @newsfeed, url:{action:"update"} do |f| %>
				<% if @newsfeed.errors.any? %>
				    <div id="error_explanation">
				      <ul>
				        <% @newsfeed.errors.full_messages.each do |message| %>
				          <li class="text-danger"><%= message %></li>
				        <% end %>
				      </ul>
				    </div>
				<% end %>
					<div>
					    <%= f.label :post %><br />
					    <%= f.text_field :post, class: "form-control" %>
					</div>	

					<% if current_user.admin? %>
						<div>
							<br>
						    <%= f.label :User %>
						    <%= f.select :user_id, User.all.map  { |m1| [m1.user_name, m1.id]} %> 
						</div>
					<% else %>
						<div>
							<%= f.hidden_field :user_id, :value =>  current_user.id  %>
						</div>
					 <% end -%>
				  	<br>
				    <div class="actions">
					    <br>
					    <%= f.submit "Create newsfeed", class: "btn btn-success btn-block" %>
				  	</div>
			<% end %>
</div>			