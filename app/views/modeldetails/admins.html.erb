<div class="container-fluid">
  <%= render partial: 'modeldetails/sidebar' %>
  <main class="col-12 col-md-10 col-sm-12 p-0 container">
    <%= render 'notice' %>
    <h2><p class="mx-5 mt-4 mb-4">Admins - <%= Admin.all.count %></p></h2>
    <div class="row container-fluid">
        <% if @admin_permissions || @create_permissions %>
        <h4><%= link_to "+ Create new Admin",  ad_admin_new_path, class: "btn btn-warning ml-5" %></h4>
        <% end %>
      </div>
      <hr>
    
    <%= form_tag details_admins_path, :method => :get do %>
    <table id="dttb" class="table table-striped" style="border-radius: 10px; overflow: hidden;border-collapse: collapse;">
      <thead>
        <tr>
          <th>
          <% if @admin_permissions %>
            <input type="checkbox" id="parentcheck1" class="parentclcheck1" >
            <% end %>
            </th>
          <th scope="col"><span class="text-primary up">id</span></th>
          <th scope="col"><span class="text-primary up">email</span></th>
          <th scope="col"><span class="text-primary up">created_at</span></th>
          <% if current_admin.role.name != "basic" %>
          <th scope="col">Actions</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
      	<% @admins.each do |admin| %>
    	    <tr>
            <td>
          <% if @admin_permissions %>
            <%= check_box_tag "admin_id[]", admin.id, false, class: "childcheck1" %>
          <% end %>
          </td>
    	 	  <td><%= admin.id %></td>
    	 	  <td><%= admin.email %></td>
    	      <td><%= admin.created_at.strftime("%A,%d %B,%Y") %></td>
            <% if current_admin.role.name != "basic" %>
          <td>
            <% if @admin_permissions || @edit_permissions %>
              <%= link_to "Edit", ad_admin_edit_path(admin) %>
              <% end %>
            <% if @admin_permissions || @delete_permissions %>
              <%= link_to "Delete", ad_admin_show_path(admin), method: :delete, data: { confirm: 'Are you sure to Delete?' }, class: "text-danger pl-2" %>
              <% end %>
          </td>  
          <% end %>      
    	    </tr>
    	 <% end %>
      </tbody>
    </table>
    <% if @admin_permissions %>
      <%= submit_tag "Export to pdf", onClick: "$(this).closest('form').attr('action', '#{ details_admins_path(format: :pdf) }')",  class: 'btn btn-info ml-5 mt-4' %>
      <%= submit_tag "Export to csv", onClick: "$(this).closest('form').attr('action', '#{ details_admins_path(format: :csv) }')",  class: 'btn btn-info ml-5 mt-4' %>
    <% end %>
    <% end %>
  </main>
  </div>
</div>

<script >
  $(document).ready(function() {
    $('#dttb').DataTable({
      "pageLength": 10
    });
  });
</script>

<style >
  
  .col-sm-12 .col-md-6 {
    padding-top: 10px;
    padding-left: 100px;
  }
  #dttb_filter {
    padding-left: 230px;
  }
  .col-md-5 {
    padding-top: 20px;
    padding-left: 50px;
  }

  .col-md-7 {
    padding-top: 20px;
    padding-left: 440px;
  }

  .up {
    text-transform: capitalize;
    cursor:pointer
  }

</style>
