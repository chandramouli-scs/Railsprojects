<div class="container-fluid">
        <%= render partial: 'modeldetails/sidebar' %>
        <main class="col-12 col-md-10 col-sm-12 p-0 container-fluid'">
         <%= render 'notice' %>
<h2><p class="mx-5 mt-4 mb-4">Projects - <%= Project.all.count %></p></h2>
<div class="row">
  <div class="col-12 col-lg-6">
<h4><%= link_to "+ Create new Project",  ad_project_new_path, class: "btn btn-warning ml-5" %></h4>
  </div>
  <div class="col-12 col-lg-5 ml-3 mb-3">
    <%= form_tag projects_admins_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], style: "height: 35px" %>
    <%= submit_tag("search", :name => nil, class: "btn btn-secondary btn-sm") %>
    <% end %>
  </div>
</div>

<table class="table table-striped" style="border-radius: 10px; overflow: hidden;border-collapse: collapse;">
  <thead>
    <tr>
      <th scope="col"><%= sortable "id" %></th>
      <th scope="col"><%= sortable "project_name" %></th>
      <th scope="col"><%= sortable "created_at" %></th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @projects.each do |project| %>
	    <tr>
	 	  <td><%= project.id %></td>
	 	  <td><%= link_to project.project_name, projectshow_admins_path(project), class: "text-success" %></td>
	      <td><%= project.created_at %></td>
        <td>
          <%= link_to "Edit", ad_project_edit_path(project) %>
          <%= link_to "Delete", projectshow_admins_path(project), method: :delete, data: { confirm: 'Are you sure to Delete?' }, class: "text-danger pl-2" %>
        </td>
	    </tr>
	 <% end %>
   </tbody>
</table>

<span><%= link_to "Export to CSV", projects_admins_path(format: "csv"), class: 'btn btn-primary ml-5 mt-4' %></span>

</main>
    </div>
</div>