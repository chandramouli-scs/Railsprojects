<div>
  <h2><p class="mx-5 mt-4 mb-4">Projects - <%= Project.all.count %></p></h2>
  <h4><%= link_to "+ Create new Project",  ad_project_new_path, class: "btn btn-warning", style: "margin-left: 800px" %></h4>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col"><%= sortable "id" %></th>
      <th scope="col"><%= sortable "project_name" %></th>
      <th scope="col"><%= sortable "created_at" %></th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @projects.each do |project| %>
	    <tr>
	 	  <td><%= project.id %></td>
	 	  <td><%= link_to project.project_name, projectshow_admins_path(project), class: "text-success" %></td>
	      <td><%= project.created_at %></td>
        <td>
          <%= link_to "Edit", ad_project_edit_path(project) %>
          <%= link_to "Delete", projectshow_admins_path(project), method: :delete, data: { confirm: 'Are you sure to Delete?' }, class: "text-danger pl-2" %>
            
        </td>
	    </tr>
	 <% end %>
   </tbody>
</table>

<span><%= link_to "Export to CSV", projects_admins_path(format: "csv"), class: 'btn btn-primary' %></span>