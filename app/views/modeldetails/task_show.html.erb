<div class="container-fluid">
	<%= render partial: 'modeldetails/sidebar' %>
	<main class="col-12 col-md-10 col-sm-12 p-0 container-fluid'">
		<div class="container ml-1">
			<%= render 'notice' %>
			<center>
			<div>
				<h4 class="mb-5 mt-4 ml-3"><strong>Task name - </strong>
			  	<%= @task.task_name %></h4>
			</div>

			<div>
				<h4 class="mb-5 mt-4 ml-3"><strong>Task attachment - </strong> <td><%= image_tag("/tasks/#{@task.id}/#{@task.cover_filename}", style: "width:20%") if @task.cover_filename? %></td></h4>
			</div>
			<div>
				<h4><strong>This task is assigned to </strong> <%= @task.project.project_name.upcase %> Project</h4>
			</div>
			</center>
		</div>
	</main>
	</div>
</div>