<div class="container-fluid">
        <%= render partial: 'modeldetails/sidebar' %>
        <main class="col-12 col-md-10 col-sm-12 p-0 container-fluid'">
         <%= render 'notice' %>
<h2><p class="mx-5 mt-4 mb-4">Tasks - <%= Task.all.count %></p></h2>
<div class="row">
  <div class="col-12 col-lg-6">
<h4><%= link_to "+ Create new Task",  ad_task_new_path, class: "btn btn-warning ml-5" %></h4>
  </div>
  <div class="col-12 col-lg-5 ml-3 mb-3">
    <%= form_tag tasks_admins_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], style: "height: 35px" %>
    <%= submit_tag("search", :name => nil, class: "btn btn-secondary btn-sm") %>
    <% end %>
  </div>
</div>

<table class="table table-striped" style="border-radius: 10px; overflow: hidden;border-collapse: collapse;">
  <thead>
    <tr>
      <th scope="col"><%= sortable "id" %></th>
      <th scope="col"><%= sortable "task_name" %></th>
      <th scope="col">Attachment</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @tasks.each do |task| %>
	    <tr>
	 	  <td><%= task.id %></td>
	 	  <td><%= task.task_name %></td>
	    <td><%= image_tag task.attachment.url(:thumb) %></td>
      <td>
          <%= link_to "Edit", ad_task_edit_path(task) %>
          <%= link_to "Delete", ad_task_show_path(task), method: :delete, data: { confirm: 'Are you sure to Delete?' }, class: "text-danger pl-2" %>
            
        </td>
	    </tr>
	 <% end %>
   </tbody>
</table>

<p class="mb-4"><%= link_to "Export to CSV", tasks_admins_path(format: "csv"), class: 'btn btn-primary ml-5 mt-4' %></p>
</main>
    </div>
</div>