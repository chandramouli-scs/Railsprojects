<div class="container-fluid">
  <%= render partial: 'modeldetails/sidebar' %>
  <main class="col-12 col-md-10 col-sm-12 p-0 container-fluid'">
    <%= render 'notice' %>
    <h2><p class="mx-5 mt-4 mb-4">Tasks - <%= Task.all.count %></p></h2>
      <div class="row container-fluid">
        <div class="col-12 col-lg-6">
        <% if can? :task_new, @tasks %>
          <h4><%= link_to "+ Create new Task",  ad_task_new_path, class: "btn btn-warning ml-5" %></h4>
          <% end %>
        </div>
        <div class="col-12 col-lg-5 ml-3 mb-3">
          <%= form_tag tasks_admins_path, :method => 'get' do %>
          <%= text_field_tag :search, params[:search], style: "height: 35px" %>
          <%= submit_tag("search", :name => nil, class: "btn btn-secondary btn-sm") %>
          <% end %>
        </div>
      </div>


    <%= form_tag tasks_admins_path(format: "csv"), :method => :get do %>
    <table class="table table-striped" style="border-radius: 10px; overflow: hidden;border-collapse: collapse;">
      <thead>
        <tr>
          <th><% if can? :task_destroy, @tasks %><input type="checkbox" id="parentcheck1" class="parentclcheck1" ><% end %></th>
          <th scope="col"><%= sortable "id" %></th>
          <th scope="col"><%= sortable "task_name" %></th>
          <th scope="col">Attachment</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
      	<% @tasks.each do |task| %>
    	    <tr>
          <td><% if can? :task_destroy, @tasks %><%= check_box_tag 'task_id[]', task.id, false, class: "childcheck1" %><% end %></td>
    	 	  <td><%= task.id %></td>
    	 	  <td><%= task.task_name %></td>
    	    <td><%= image_tag(task.photo, style: "width:90px") %></td>
          <td>
            <% if can? :task_edit, task %>
              <%= link_to "Edit", ad_task_edit_path(task) %>
            <% end %>
            <% if can? :task_destroy, task %>
              <%= link_to "Delete", ad_task_show_path(task), method: :delete, data: { confirm: 'Are you sure to Delete?' }, class: "text-danger pl-2" %>
              <% end %>
                
            </td>
    	    </tr>
    	 <% end %>
       </tbody>
    </table>
    <% if can? :task_destroy, @tasks %>
       <%= submit_tag "Export to pdf", onClick: "$(this).closest('form').attr('action', '#{ tasks_admins_path(format: :pdf) }')",  class: 'btn btn-info ml-5 mt-4' %>
    <%= submit_tag "Export to csv", onClick: "$(this).closest('form').attr('action', '#{ tasks_admins_path(format: :csv) }')",  class: 'btn btn-info ml-5 mt-4' %>
       <% end %>
       <% end %>
       <div class="float-right"><%= pagy_bootstrap_nav(@pagy).html_safe %></div>
  </main>
  </div>
</div>