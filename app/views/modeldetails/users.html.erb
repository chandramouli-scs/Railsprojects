<div class="container-fluid">
        <%= render partial: 'modeldetails/sidebar' %>
        <main class="col-12 col-md-10 col-sm-12 p-0 container-fluid'">
         <%= render 'notice' %>
<h2><p class="mx-5 mt-4 mb-4">Users - <%= User.all.count %></p></h2>
<div class="row">
  <div class="col-12 col-lg-6">
    <%= link_to "+ Create new User",  ad_user_new_path, class: "btn btn-warning ml-5" %>
  </div>
  <div class="col-12 col-lg-5 ml-3 mb-3">
    <%= form_tag users_admins_path, :method => 'get' do %>
    <%= text_field_tag :search, params[:search], style: "height: 35px" %>
    <%= submit_tag("search", :name => nil, class: "btn btn-secondary btn-sm") %>
    <% end %>
  </div>
</div>



<table class="table table-striped" style="border-radius: 10px; overflow: hidden;border-collapse: collapse;">
  <thead>
    <tr>
      <th scope="col"><%= sortable "id" %></th>
      <th scope="col"><%= sortable "user_name" %></th>
      <th scope="col"><%= sortable "first_name" %></th>
      <th scope="col"><%= sortable "last_name" %></th>
      <th scope="col"><%= sortable "email" %></th>
      <th scope="col"><%= sortable "phone_number" %></th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @users.each do |user| %>
	    <tr>
	 	  <td><%= user.id %></td>
	      <td><%= user.user_name %></td>
	      <td><%= user.first_name %></td>
	      <td><%= user.last_name %></td>
	      <td><%= user.email %></td>
	      <td><%= user.phone_number %></td>
        <td>
          <%= link_to "Edit", ad_user_edit_path(user) %>
          <%= link_to "Delete", ad_user_show_path(user), method: :delete, data: { confirm: 'Are you sure to Delete?' }, class: "text-danger pl-2" %>
        </td>        
	    </tr>
	 <% end %>
   </tbody>
</table>

<span><%= link_to "Export to CSV", users_admins_path(format: "csv"), class: 'btn btn-primary ml-5 mt-4' %></span>

</main>
    </div>
</div>